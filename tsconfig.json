{
    "compilerOptions": {
        "incremental": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "noImplicitOverride": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "strictBindCallApply": true,
        "target": "es2015",
        "lib": [
            "ES6",
            "ESNext",
            "DOM"
        ],
        "pretty": true,
        "baseUrl": "./",
        "declaration": true,
        "declarationMap": false,
        "removeComments": true,
        "sourceMap": false,
        "allowJs": true,
        "checkJs": true,
        "module": "CommonJS",
        "resolveJsonModule": true,
        "outDir": "./dist",
    },
    "extends": "@tsconfig/recommended/tsconfig.json",
    "exclude": [
        "**/._*",
        "**/._*/**/*"
    ],
    "include": [
        "./src/**/*.ts",
    ],
}