{
    "compilerOptions": {
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "noImplicitOverride": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "strictBindCallApply": true,
        "forceConsistentCasingInFileNames": true,
        "target": "es6",
        "lib": [
            "ES6",
            "ESNext",
            "DOM"
        ],
        "pretty": true,
        "skipLibCheck": true,
        "noUnusedLocals": true,
        "baseUrl": "./",
        "module": "nodenext",
        "declaration": true,
        "declarationMap": false,
        "removeComments": true,
        "sourceMap": false,
        "allowJs": true,
        "checkJs": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "incremental": true,
        "outDir": "./dist"
    },
    "extends": "@tsconfig/recommended/tsconfig.json",
    "exclude": [
        "**/._*",
        "**/._*/**/*"
    ],
    "include": [
        "src/**/*.ts"
    ]
}