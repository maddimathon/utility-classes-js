{
    "htmlWhitespaceSensitivity": "strict",
    "tabWidth": 4,
    "trailingComma": "all",
    "printWidth": 80,
    "proseWrap": "always",
    "overrides": [
        {
            "files": [ "*.html" ],
            "options": {
                "printWidth": 10000
            }
        },
        {
            "files": [ "*.scss" ],
            "options": {
                "singleQuote": true
            }
        }
    ]
}